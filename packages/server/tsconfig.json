{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
  "module": "Node16",
  "moduleResolution": "Node16",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src", "scripts"],
  "exclude": ["dist", "node_modules"]
}
